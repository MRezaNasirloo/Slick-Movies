<resources>

    <style name="Base.0V" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.0V">
        <!-- Customize your theme here. -->
    </style>

    <style name="TittleItemBanner" parent="AppTheme">
        <item name="android:textColor">#f2f2f2</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TittleItemCard" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#5f5f5f</item>
    </style>

    <style name="TittleHeader" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#5f5f5f</item>
    </style>


    <style name="DetailsWhiteText" parent="AppTheme">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DetailsGrayText" parent="AppTheme">
        <item name="android:textColor">#5f5f5f</item>
    </style>

    <style name="DetailsBlackText" parent="AppTheme">
        <item name="android:textColor">#5f5f5f</item>
    </style>


</resources>
