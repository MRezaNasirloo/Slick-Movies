<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="vm"
            type="com.github.pedramrn.slick.parent.domain.model.MovieItem"
            />

        <variable
            name="rank"
            type="String"
            />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/movie_cover_image"
            android:minHeight="200dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{vm.poster()}"
            app:layout_constraintBottom_toBottomOf="@+id/footer"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:background="@color/color_box_office"
            />

        <View
            android:id="@+id/footer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/gradient_shadow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="8dp"
            android:text="@{vm.name()}"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            tools:text="@string/place_holder_tittle"
            />


        <TextView
            android:id="@+id/textView_score_imdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="4.52"
            android:gravity="bottom"
            android:text="@{vm.scoreImdb()}"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/footer"
            tools:text="@string/place_holder_score_imdb"
            />

        <ImageView
            android:id="@+id/imageView_logo_imdb"
            android:layout_width="36dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="2.63"
            android:contentDescription="@string/logo_imdb"
            android:transformPivotX="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_score_imdb"
            app:layout_constraintEnd_toStartOf="@+id/textView_score_imdb"
            app:layout_constraintRight_toLeftOf="@+id/textView_score_imdb"
            app:layout_constraintTop_toTopOf="@+id/textView_score_imdb"
            app:layout_constraintVertical_bias="0.333"
            app:srcCompat="@drawable/ic_logo_imdb_2016"
            />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="181dp"
            />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="211dp"
            />

        <com.github.pedramrn.slick.parent.ui.custom.TextViewCompatTint
            android:id="@+id/textView_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_time_black_24dp"
            android:gravity="center"
            android:text="@{vm.runtime()}"
            android:textSize="16sp"
            app:drawableTint="#CCC"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_score_imdb"
            app:layout_constraintRight_toLeftOf="@+id/imageView_logo_imdb"
            tools:text="130 min"
            />

        <com.github.pedramrn.slick.parent.ui.custom.TextViewCompatTint
            android:id="@+id/textView_revenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:drawableStart="@drawable/ic_money_black_24dp"
            android:gravity="center"
            android:text="@{vm.revenue()}"
            android:textSize="16sp"
            app:drawableTint="#CCC"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_score_imdb"
            app:layout_constraintRight_toLeftOf="@+id/textView_runtime"
            tools:text="234.2 m"
            />

        <TextView
            android:id="@+id/textView_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{rank}"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView_revenue"
            app:layout_constraintTop_toBottomOf="@+id/textView_title"
            app:layout_constraintVertical_bias="0.666"
            tools:text="#1"
            />

    </android.support.constraint.ConstraintLayout>

</layout>