<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="vm"
            type="com.github.pedramrn.slick.parent.domain.model.MovieItem"
            />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/movie_cover_image"
            android:minHeight="200dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{vm.poster()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:background="@color/color_box_office"
            />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:text="@{vm.name()}"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            tools:text="@string/place_holder_tittle"
            />


        <TextView
            android:id="@+id/textView_score_imdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="4.52"
            android:gravity="bottom"
            android:text="@{vm.scoreImdb()}"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="@string/place_holder_score_imdb"
            />

        <ImageView
            android:id="@+id/imageView_logo_imdb"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="0dp"
            android:layout_weight="2.63"
            android:contentDescription="@string/logo_imdb"
            android:transformPivotX="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_score_imdb"
            app:layout_constraintEnd_toStartOf="@+id/textView_score_imdb"
            app:layout_constraintTop_toTopOf="@+id/textView_score_imdb"
            app:layout_constraintVertical_bias="0.428"
            app:srcCompat="@drawable/ic_logo_imdb_2016"

            />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            />

    </android.support.constraint.ConstraintLayout>

</layout>