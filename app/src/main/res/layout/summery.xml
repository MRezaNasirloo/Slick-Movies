<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >
    <!--tools:showIn="@layout/controller_details"-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical"
            android:padding="8dp"
        >

        <!--style="@style/DetailsWhiteText"-->

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textView_genre"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Title"
            app:layout_constraintLeft_toRightOf="@+id/imageView_icon"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            />

        <TextView
            android:id="@+id/textView_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/textView_release"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_title"
            tools:text="Genre"
            app:layout_constraintLeft_toRightOf="@+id/imageView_icon"
            />

        <TextView
            android:id="@+id/textView_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_score"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintRight_toLeftOf="@+id/textView_runtime"
            app:layout_constraintTop_toBottomOf="@+id/textView_genre"
            tools:text="27 May 2016"
            app:layout_constraintLeft_toRightOf="@+id/imageView_icon"
            />

        <TextView
            android:id="@+id/textView_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintRight_toLeftOf="@+id/textView_logo_imdb"
            app:layout_constraintTop_toBottomOf="@+id/textView_release"
            tools:text="7.5/10"
            app:layout_constraintLeft_toRightOf="@+id/imageView_icon"
            />

        <TextView
            android:id="@+id/textView_logo_imdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/oval"
            android:gravity="center"
            android:text=" IMDB "
            android:textColor="#000"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_score"
            app:layout_constraintLeft_toRightOf="@+id/textView_score"
            app:layout_constraintRight_toLeftOf="@+id/textView_rated"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:id="@+id/textView_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_release"
            app:layout_constraintLeft_toRightOf="@+id/textView_release"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="129min"
            />

        <TextView
            android:id="@+id/textView_rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/oval"
            android:backgroundTint="#2ca0ff"
            android:textColor="#ffffff"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_logo_imdb"
            app:layout_constraintLeft_toRightOf="@+id/textView_logo_imdb"
            app:layout_constraintRight_toRightOf="parent"
            tools:text=" PG-13 "
            />

        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:src="@mipmap/ic_launcher"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
