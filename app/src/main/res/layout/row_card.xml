<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >


    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_editor_absoluteX="0dp"
            app:layout_editor_absoluteY="0dp"
            >


            <com.github.pedramrn.slick.parent.ui.custom.ImageViewGlide
                android:id="@+id/imageView_poster"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/rectangle_no_corners"
                app:layout_constraintBottom_toTopOf="@+id/textView_title"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside"
                />


            <TextView
                android:id="@+id/textView_title"
                style="@style/DetailsBlackText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxEms="3"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/button_like"
                app:layout_constraintTop_toBottomOf="@id/imageView_poster"
                tools:text="Some Awesome Movie with Long Title"
                />

            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/button_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@id/textView_title"
                app:layout_constraintLeft_toRightOf="@+id/textView_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/textView_title"
                app:sparkbutton_activeImage="@drawable/ic_like_black_24dp"
                app:sparkbutton_iconSize="25dp"
                app:sparkbutton_inActiveImage="@drawable/ic_unlike_black_24dp"
                app:sparkbutton_primaryColor="@color/color_blue"
                app:sparkbutton_secondaryColor="@color/color_gray_3"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>
